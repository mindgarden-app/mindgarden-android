    <LinearLayout
        android:id="@+id/ll_rv_item_diary_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txt_rv_item_diary_list_day_num"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="00"
                android:textSize="16dp"
                android:textColor="#2B2B2B"/>

            <TextView
                android:id="@+id/txt_rv_item_diary_list_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_rv_item_diary_list_day_num"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Day"
                android:textSize="12.5dp"
                android:textColor="#888888"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_diary_list_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <TextView
                android:id="@+id/tv_item_diary_content"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="@{diary.content}"
                android:textColor="#000000"
                android:textSize="14.5dp"
                android:singleLine="true"
                tools:text="test"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_diary_list_weather"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/diary_list_weather_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:src="@drawable/ic_launcher_foreground"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginBottom="0.5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#78DEB0"
            android:visibility="gone">

            <ImageView
                android:id="@+id/icn_delete"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:src="@drawable/ic_launcher_background"/>

        </LinearLayout>

    </LinearLayout>


</layout>