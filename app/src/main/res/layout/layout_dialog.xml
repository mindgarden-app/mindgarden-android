<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="248dp"
    android:layout_height="176dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog_rounded">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:paddingLeft="25dp"
        android:paddingTop="24dp"
        android:text="일기 삭제"
        android:textSize="18sp"
        android:textColor="#2b2b2b"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="0dp"
        android:layout_height="50.5dp"
        android:paddingBottom="30.5dp"
        android:gravity="center"
        android:text="삭제하시겠습니까?"
        android:textSize="14sp"
        android:textColor="#2b2b2b"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="248dp"
        android:layout_height="53.5dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            tools:ignore="MissingConstraints"
            android:background="#e8e8e8"></LinearLayout>

            <TextView
                android:id="@+id/btn_detail_delete_cancel"
                android:layout_width="124.5dp"
                android:layout_height="53.5dp"
                android:gravity="center"
                android:text="취소"
                android:textColor="#78deb0"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:ignore="MissingConstraints"/>

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="53.5dp"
            tools:ignore="MissingConstraints,Orientation"
            android:background="#e8e8e8"
            app:layout_constraintLeft_toRightOf="@id/btn_detail_delete_cancel"></LinearLayout>

            <TextView
                android:id="@+id/btn_detail_delete"
                android:layout_width="123.5dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="삭제"
                android:textColor="#78deb0"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintLeft_toRightOf="@id/line"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>